<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.AutoApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:itemBackground">@color/customOrange</item>

        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:itemBackground">@color/customOrange</item>
    </style>
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="failedToast">
        <item name="stColorBackground">#FF0000</item>
        <item name="stTextColor">#FFFFFF</item>
    </style>
    <style name="successToast">
        <item name="stColorBackground">#00BD56</item>
        <item name="stTextColor">#FFFFFF</item>
    </style>
    <style name="PreferenceScreen" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:textColor">@color/loginBackground</item>
    </style>



</resources>